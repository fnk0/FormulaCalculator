<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rowButtons1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.14"
        android:orientation="horizontal"
        >

        <include layout="@layout/default_button" />
        <include layout="@layout/default_button" />

        <include
            layout="@layout/default_button"
            android:id="@+id/btnLog"
            android:text="@string/log"
            android:textSize="35sp"
            />

        <Button
            android:id="@+id/btnLn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginRight="2dip"
            android:layout_weight="0.2"
            android:background="@color/def_button"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="handleKeypad"
            android:text="@string/ln"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            />

        <Button
            android:id="@+id/keypadDel"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/button_2"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="deleteFromDisplay"
            android:text="@string/del"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowButtons2"
        android:layout_width="match_parent"
        android:layout_height="0dip"
