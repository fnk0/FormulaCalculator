            android:gravity="center_horizontal|center_vertical"
            android:onClick="handleKeypad"
            android:text="@string/var_e"
            android:textColor="@android:color/white"
            android:textSize="60sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowButtons3"
