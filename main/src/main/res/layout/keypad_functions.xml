<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rowButtons1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.14"
        android:orientation="horizontal"
        >

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:id="@+id/degreeRad"
            android:text="@string/deg"
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />
        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:id="@+id/btnLog"
            android:text="@string/log"
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:id="@+id/btnLn"
            android:text="@string/ln"
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:id="@+id/keypadDel"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/button_2"
            android:gravity="center_horizontal|center_vertical"
            android:drawableLeft="@android:drawable/ic_input_delete"
            android:paddingLeft="20dip"
            android:textColor="@android:color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowButtons2"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        
        android:layout_weight="0.14"
        android:orientation="horizontal"
        >
        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:id="@+id/btnSin"
            android:text="@string/sin"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
        />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:id="@+id/btnCos"
            android:text="@string/cos"
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:id="@+id/btnTan"
            android:text="@string/tan"
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:id="@+id/keypadSqrt"
            android:text="@string/sqrt"
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:id="@+id/varE"
            android:text="@string/var_e"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowButtons3"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        
        android:layout_weight="0.14"
        android:orientation="horizontal"
        >

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:text=""
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
        />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:text=""
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:text=""
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />
        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:text=""
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />
        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:id="@+id/varPi"
            android:text="@string/pi"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowButtons4"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        
        android:layout_weight="0.14"
        android:orientation="horizontal"
        >

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:text=""
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:text=""
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:text=""
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:text=""
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />
        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:id="@+id/keypadInfinity"
            android:text="@string/infinity_symbol"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowButtons5"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        
        android:layout_weight="0.14"
        android:orientation="horizontal"
        >

       <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
           android:id="@+id/insertedButton"
           
           android:layout_width="0dip"
           android:layout_height="match_parent"
           android:layout_weight="0.2" />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:id="@+id/button28"
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            />

        <com.gabilheri.formulacalculator.main.xmlElements.DefaultButton
            android:id="@+id/btnFact"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/button_2"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="handleKeypad"
            android:text="@string/factorial"
            android:textColor="@android:color/white"
            />
    </LinearLayout>

</LinearLayout>